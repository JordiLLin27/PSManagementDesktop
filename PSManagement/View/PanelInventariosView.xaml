<UserControl x:Class="PSManagement.View.PanelInventariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSManagement.View"
             mc:Ignorable="d" 
             d:DesignHeight="978" d:DesignWidth="1696"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="18"
             FontFamily="{materialDesign:MaterialDesignFont}" Width="Auto" Height="Auto">

    <!--Recursos-->
    <UserControl.Resources>
    </UserControl.Resources>

    <!--Comandos-->
    <UserControl.CommandBindings>

    </UserControl.CommandBindings>

    <!--Principal-->
    <Grid x:Name="PanelPrincipalGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!--Mantenimiento de Articulos-->
        <GroupBox Header="Mantenimiento de Artículos" Margin="5" Grid.Row="0" Grid.ColumnSpan="3">

            <DockPanel>

                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">

                    <Label Content="Filtrar por inventario" Margin="10"/>
                    <ComboBox x:Name="FiltroInventariosComboBox" ItemsSource="{Binding ListaInventarios}" Width="200" Margin="10"></ComboBox>

                    <Label Content="Filtrar por Categoria" Margin="10"/>
                    <ComboBox x:Name="FiltroCategoriasComboBox" ItemsSource="{Binding ListaCategorias}" Width="200" Margin="10"></ComboBox>

                    <Label Content="Filtrar por Color" Margin="10"/>
                    <ComboBox x:Name="FiltroColoresComboBox" ItemsSource="{Binding ListaColores}" Width="200" Margin="10"></ComboBox>

                    <TextBox materialDesign:HintAssist.Hint="Búsqueda de artículos" Margin="10" Width="200"></TextBox>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                    <Button x:Name="ActivarModificacionArticulosButton" Content="Modificar campos" Width="200" Margin="0,0,20,0"/>
                    <Button x:Name="GuardarArticulosButton" Content="Aceptar" Width="200" Margin="0,0,20,0"/>
                    <Button x:Name="RefrescarTablaButton" Content="Refrescar" Width="200"/>
                </StackPanel>


                <DataGrid x:Name="TablaArticulosInventario" ItemsSource="{Binding}" SelectedItem="{Binding ArticuloSeleccionado}" 
                          AutoGenerateColumns="False" 
                          CanUserResizeColumns="False" CanUserResizeRows="False" CanUserReorderColumns="False"  CanUserSortColumns="True" 
                          SelectionUnit="FullRow" SelectionMode="Single"
                          IsReadOnly="True"
                          Foreground="{DynamicResource MaterialDesignBody}"
                          AlternatingRowBackground="#6ec6ff">
                    <DataGrid.Columns>
                        <materialDesign:DataGridTextColumn Header="Nombre Artículo" Binding="{Binding Nombre}" Width="*"/>
                        <materialDesign:DataGridTextColumn Header="Inventario" Binding="{Binding INVENTARIO.Descripcion}" Width="*"/>
                        <materialDesign:DataGridTextColumn Header="Categoría" Binding="{Binding CATEGORIA.Categoria}" Width="*"/>
                        <materialDesign:DataGridTextColumn Header="Color" Binding="{Binding COLOR.Color}" Width="*"/>
                        <materialDesign:DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" Width="*"/>
                        <DataGridTemplateColumn Header="Precio" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding PrecioUnitario}"/>
                                        <Run Text="€"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <materialDesign:DataGridTextColumn Header="Stock Mínimo" Binding="{Binding StockMinimo}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Sotck Disponible" Binding="{Binding StockDisponible}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>

        </GroupBox>

        <!--Mantenimiento de inventario-->
        <GroupBox Header="Mantenimiento de Inventario" Margin="5" Grid.Row="1" Grid.Column="0">

            <TabControl Background="{DynamicResource MaterialDesignPaper}" Foreground="{DynamicResource MaterialDesignBody}">

                <!--Añadir-->
                <TabItem Header="Añadir Inventario">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="NombreInventarioTextBox" Grid.Column="1" Grid.Row="0" 
                                 materialDesign:HintAssist.Hint="Introduce el nombre del inventario a añadir" Foreground="{DynamicResource MaterialDesignBody}" Margin="15" VerticalAlignment="Center"
                                 Text="{Binding NuevoInventario.Descripcion}"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="20">
                            <Button x:Name="GuardarButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="LimpiarButton" Content="Limpiar" Width="100" />
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--Editar-->
                <TabItem Header="Editar Inventario">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <ComboBox x:Name="EditarListaInventariosComboBox" Grid.Column="1" Margin="15" 
                                  materialDesign:HintAssist.Hint="Selecciona Inventario" Foreground="{DynamicResource MaterialDesignBody}" 
                                  ItemsSource="{Binding ListaInventarios}" SelectedItem="{Binding InventarioSeleccionado}" DisplayMemberPath="Descripcion"></ComboBox>


                        <TextBox x:Name="EditarNombreInventarioTextBox" Grid.Column="1" Grid.Row="1" 
                                 materialDesign:HintAssist.Hint="Introduce el nombre del inventario" Foreground="{DynamicResource MaterialDesignBody}" Height="30" Margin="15"
                                 Text="{Binding InventarioSeleccionado.Descripcion}"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="5" Margin="20">
                            <Button x:Name="EditarGuardarButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="EditarLimpiarButton" Content="Limpiar" Width="100" />
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--Eliminar-->
                <TabItem Header="Eliminar Inventario">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="EliminarListaInventariosComboBox" Grid.Row="0" Grid.Column="1" 
                                  Margin="15" materialDesign:HintAssist.Hint="Selecciona Inventario" Foreground="{DynamicResource MaterialDesignBody}"
                                  ItemsSource="{Binding ListaInventarios}" SelectedItem="{Binding InventarioSeleccionado}" DisplayMemberPath="Descripcion"></ComboBox>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="20">
                            <Button x:Name="EliminarGuardarButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="EliminarRefrescarButton" Content="Refrescar" Width="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

            </TabControl>

        </GroupBox>

        <!--Mantenimiento de Colores-->
        <GroupBox Header="Mantenimiento de Colores" Margin="5" Grid.Row="1" Grid.Column="1">

            <TabControl Background="{DynamicResource MaterialDesignPaper}" Foreground="{DynamicResource MaterialDesignBody}">

                <!--Añadir-->
                <TabItem Header="Añadir Color">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <TextBox x:Name="NombreColorTextBox" Grid.Column="1" Grid.Row="0" materialDesign:HintAssist.Hint="Introduce el nombre del color a añadir" Foreground="{DynamicResource MaterialDesignBody}" Margin="15" VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="20">
                            <Button x:Name="GuardarColorButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="LimpiarColorButton" Content="Limpiar" Width="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--Editar-->
                <TabItem Header="Editar Color">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="EditarListaColoresComboBox" Grid.Column="1" 
                                  Margin="15" materialDesign:HintAssist.Hint="Selecciona Color" Foreground="{DynamicResource MaterialDesignBody}"
                                  ItemsSource="{Binding ListaColores}" SelectedItem="{Binding ColorSeleccionado}" DisplayMemberPath="Color"></ComboBox>

                        <TextBox x:Name="EditarNombreColorTextBox" Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="Introduce el color" Foreground="{DynamicResource MaterialDesignBody}" Margin="15"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="5" Margin="20">
                            <Button x:Name="EditarColorGuardarButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="EditarLimpiarColorButton" Content="Limpiar" Width="100"/>
                        </StackPanel>

                    </Grid>
                </TabItem>

                <!--Eliminar-->
                <TabItem Header="Eliminar Color">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="EliminarListaColoresComboBox" Grid.Row="0" Grid.Column="1" 
                                  Margin="15" materialDesign:HintAssist.Hint="Selecciona Color" Foreground="{DynamicResource MaterialDesignBody}"
                                   ItemsSource="{Binding ListaColores}" SelectedItem="{Binding ColorSeleccionado}" DisplayMemberPath="Color"></ComboBox>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="20">
                            <Button x:Name="EliminarGuardarColorButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="EliminarRefrescarColorButton" Content="Refrescar" Width="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </GroupBox>


        <!--Mantenimiento de Categorías-->
        <GroupBox Header="Mantenimiento de Categorías" Margin="5" Grid.Row="1" Grid.Column="2">

            <TabControl Background="{DynamicResource MaterialDesignPaper}" Foreground="{DynamicResource MaterialDesignBody}">

                <!--Añadir-->
                <TabItem Header="Añadir Categoría">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="NombreCategoriaTextBox" Grid.Column="1" Grid.Row="0" materialDesign:HintAssist.Hint="Introduce el nombre la categoría a añadir" Foreground="{DynamicResource MaterialDesignBody}" Margin="15" VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="20">
                            <Button x:Name="GuardarCategoriaButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="LimpiarCategoriaButton" Content="Limpiar" Width="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--Editar-->
                <TabItem Header="Editar Categoría">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="EditarListacategoriasComboBox" Grid.Column="1" 
                                  Margin="15" materialDesign:HintAssist.Hint="Selecciona Categoría" Foreground="{DynamicResource MaterialDesignBody}"
                                   ItemsSource="{Binding ListaCategorias}" SelectedItem="{Binding CategoriaSeleccionada}" DisplayMemberPath="Categoria"></ComboBox>

                        <TextBox x:Name="EditarNombreCategoriaTextBox" Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="Introduce el nombre de la categoría" Foreground="{DynamicResource MaterialDesignBody}" Margin="15"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="5" Margin="20">
                            <Button x:Name="EditarGuardarCategoriaButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="EditarLimpiarCategoriaButton" Content="Limpiar" Width="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--Eliminar-->
                <TabItem Header="Eliminar Categoría">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="EliminarListaCategoriaComboBox" Grid.Row="0" Grid.Column="1" 
                                  Margin="15" materialDesign:HintAssist.Hint="Selecciona Categoría" Foreground="{DynamicResource MaterialDesignBody}"
                                  ItemsSource="{Binding ListaCategorias}" SelectedItem="{Binding CategoriaSeleccionada}" DisplayMemberPath="Categoria"></ComboBox>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="30">
                            <Button x:Name="EliminarGuardarCategoriaButton" Content="Aceptar" Width="100" Margin="0,0,20,0"/>
                            <Button x:Name="EliminarRefrescarCategoraiButton" Content="Refrescar" Width="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

            </TabControl>

        </GroupBox>


    </Grid>
</UserControl>
